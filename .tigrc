# Setting
set show-rev-graph = yes
set show-date      = short
set vertical-split = yes
set show-id        = yes
set show-refs      = yes
set line-graphics  = utf-8
set ignore-case    = yes

# Keymap
## For general
bind generic ? view-help
bind generic u scroll-page-up
bind generic d scroll-page-down
bind generic l scroll-right
bind generic h scroll-left
bind generic g move-first-line
bind generic G move-last-line
bind generic c !@sh -c "echo %(commit) | pbcopy"
bind generic o !@sh -c "hub browse -- commit/%(commit)"

## For main
bind main Space enter
bind main Enter view-diff
bind main s     view-status

## For diff
bind diff ; view-next

## For status
bind status Space enter
bind status u status-update

## For blame
bind blame Space enter
bind blame Enter view-diff
