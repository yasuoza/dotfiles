# Setting
set vertical-split = yes
set line-graphics  = utf-8
set ignore-case    = yes
set diff-options   = -m --first-parent

# View specific settings
set main-view      = id:yes date:short author:yes commit-title:yes,graph=yes,refs=yes,overflow=no
set blame-view     = date:short author:full file-name:auto id:yes,color line-number:yes,interval=5 text

# Keymap
## For general
bind generic ? view-help
bind generic u scroll-page-up
bind generic d scroll-page-down
bind generic l scroll-right
bind generic h scroll-left
bind generic g move-first-line
bind generic G move-last-line
bind generic c !@sh -c 'echo %(commit) | tr -d "\n" | pbcopy'
bind generic o !@sh -c "hub browse -- commit/%(commit)"

## For main
bind main <Space> enter
bind main <Enter> view-diff
bind main s       view-status
bind main R       !git rebase -i %(commit)
bind main G       move-last-line

## For diff
bind diff ; view-next

## For status/stage
bind status <Space> enter
bind status u       scroll-page-up
bind stage  u       scroll-page-up
bind status C       !git commit -v

## For blame
bind blame <Space> enter
bind blame <Enter> view-diff

# Color
color cursor black green bold
