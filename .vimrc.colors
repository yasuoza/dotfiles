"-------------------------------------------------------------------------------
" Colors
"-------------------------------------------------------------------------------

let g:hybrid_use_Xresources = 1
colorscheme hybrid

" color setting according to terminal color setting
if &term =~ "xterm-256color" || "screen-256color"
  " 256
  set t_Co=256
  set t_Sf=[3%dm
  set t_Sb=[4%dm
elseif &term =~ "xterm-debian" || &term =~ "xterm-xfree86"
  set t_Co=16
  set t_Sf=[3%dm
  set t_Sb=[4%dm
elseif &term =~ "xterm-color"
  set t_Co=8
  set t_Sf=[3%dm
  set t_Sb=[4%dm
endif

" highlight on
syntax enable
