"-------------------------------------------------------------------------------
" Customize vim runtime
"-------------------------------------------------------------------------------
if &shell =~# 'fish$'
    set shell=sh
endif

"-------------------------------------------------------------------------------
" Customize vim runtime path
"-------------------------------------------------------------------------------
" Go configration
" http://mattn.kaoriya.net/software/vim/20130531000559.htm
if ($GOROOT != "") && ($GOPATH != "")
  set rtp+=$GOROOT/misc/vim
  exe "set rtp+=".globpath($GOPATH, "src/github.com/nsf/gocode/vim")
endif
